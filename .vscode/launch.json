{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Program with GDB",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/a.out", // Path to your compiled executable
            "args": [],                                         // Command-line arguments for your program
            "stopAtEntry": false,                               // Whether to stop at the program's entry point
            "cwd": "${workspaceFolder}",                        // Current working directory for the program
            "environment": [],                                  // Environment variables
            "externalConsole": false,                           // Whether to use an external console for input/output
            "MIMode": "gdb",                                    // Specifies GDB as the debugger
            "miDebuggerPath": "/usr/bin/gdb",                   // Path to your GDB executable
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "build" // Optional: Name of a task to run before launching (e.g., a build task)
        }
    ]
}